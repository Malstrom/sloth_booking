<%= form_with(model: Event.new, url: book_club_events_path(@club)) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :club_id, style: "display: block" %>
    <%= form.text_field :club_id, value: @event %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :starts_at, style: "display: block" %>
    <%= form.text_field :starts_at, value: params[:starts_at]  %>
  </div>

  <div>
    <%= form.label :duration, style: "display: block" %>
    <%= form.text_field :duration, value: params[:duration]  %>
  </div>

  <div>
    <%= form.label :day, style: "display: block" %>
    <%= form.text_field :day, value: @selected_day  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
