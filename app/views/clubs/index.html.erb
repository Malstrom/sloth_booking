<div class="container">

  <h1>Clubs</h1>
  <%= form_with(url: clubs_path, method: :get) do |form| %>
    <div class="row g-3">
      <div class="col-2">
        <%= form.date_field :selected_date, class:"form-control" %>
      </div>
      <div class="col-2">
        <%= form.text_field :duration, class: "form-control" %>
      </div>
      <div class="col-2">
        <%= form.submit value:"search", class: "btn btn-primary mb-3" %>
      </div>
    </div>
  <% end %>

  <br>

  <div class="row">
    <% @clubs.each do |club| %>
      <div class="col-sm-3">
        <%= render club %>
      </div>
    <% end %>
  </div>


</div>




